{
  "name": "flareon",
  "productName": "Flareon",
  "version": "0.1.0",
  "description": "Developer-focused web browser.",
  "private": true,
  "main": "dist/main/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:main\" \"npm:dev:electron\"",
    "dev:renderer": "vite --config vite.renderer.config.ts",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:electron": "wait-on tcp:5173 dist/main/index.js && electron .",
    "build": "run-s build:main build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build --config vite.renderer.config.ts",
    "lint": "eslint \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "electron": "^31.0.2",
    "lucide-react": "^0.264.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.3",
    "vite": "^5.2.8",
    "wait-on": "^7.0.1"
  }
}
